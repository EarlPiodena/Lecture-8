#include <iostream>
using namespace std;
int main()
{
    cout << "Would you like to continue? (Y/N): " << endl;

    char input;
    cin >> input;

    switch (input)
    {
    case 'Y':
    case 'y':
    {
        cout << "The game will continue";
        break;
    }
    case 'N':
    case 'n':
    {
        cout << "The game will exit";
        break;
    }

    default:
    {
        cout << "Invalid Input";
    }
    cin.get();
    return 0;
    }
}
