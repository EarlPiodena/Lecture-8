#include <iostream>
using namespace std;

int main()
{
 
    int month;
    cout << "Enter the month (1-12): " << endl;
    cin >> month;

    switch (month) 
    {
    case 1:
        cout << ("31 days") << endl;
        break;
      
    case 2:
       cout << ("28/29 days") << endl;
        break;
    case 3:

        cout << ("31 days") << endl;
        break;
    case 4:

        cout << ("30 days") << endl;
        break;
    case 5:

        cout << ("31 days") << endl;
        break;
    case 6:

        cout << ("30 days") << endl;
        break;
    case 7:

        cout << ("31 days") << endl;
        break;
    case 8:

        cout << ("31 days") << endl;
        break;
    case 9:

        cout << ("30 days") << endl;
        break;
    case 10:

        cout << ("31 days") << endl;
        break;
    case 11:

        cout << ("30 days") << endl;
        break;
    case 12:

        cout << ("31 days") << endl;
        break;

    default:
        cout << ("That is an invalid input, please choose a month from 1-12") << endl;

    }

    return 0;
}
